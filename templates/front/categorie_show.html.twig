{% extends 'base.html.twig' %}

{% block title %}Hello FrontController!{% endblock %}

{% block body %}
    <!-- Masthead-->
    <header class="masthead bg-primary text-white text-center">
        <h1>Our Catalogue</h1>
        <section>

                <div class="container">
                    <div class="row">
                    {% for product in categorie.products %}
                        <div class="col-lg-8 mx-auto">
                            <!-- Post preview-->
                            <div class="post-preview">
                                <ul>
                                  <li class="post-title">{{ product.name }}</li>
                                </ul>
                                </div>
                                </div>
                                {% endfor %}
                    </div>
                </div>
        </section>
    </header>
{% endblock %}