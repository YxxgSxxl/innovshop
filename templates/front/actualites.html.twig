{% extends 'base.html.twig' %}

{% block title %}Hello FrontController!{% endblock %}

{% block body %}
        <!-- Masthead-->
        <header class="masthead bg-primary text-white text-center">
        <h1>Our Actus!</h1>

        <div class="container">
            <div class="row">
                {% for post in posts %}
                    <div class="col-md-4">
                        <div class="card mb-4 shadow-sm text-dark">
                            <img class="card-img-top" src="/images/{{ post.image }}" alt="Image for {{ post.title }}">
                            <div class="card-body">
                                <h5 class="card-title">{{ post.title }}</h5>
                                <p class="card-text">{{ post.content|raw }}</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a href="{{ path('app_front_actualites_detail', {'id': post.id}) }}" class="btn btn-sm btn-outline-secondary">View</a>
                                    </div>
                                    <small class="text-muted">{{ post.createdAt|date('Y-m-d') }}</small>
                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <p>No actualities found.</p>
                {% endfor %}
            </div>
        </div>
        </header>
{% endblock %}
