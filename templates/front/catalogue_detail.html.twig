{% extends 'base.html.twig' %}

{% block title %}Hello FrontController!{% endblock %}

{% block body %}
    <!-- Masthead-->
    <header class="masthead bg-primary text-white text-center">
        <h1>Our Catalogue</h1>
        <section>

                <div class="container">
                    <div class="row">
                        <div class="col-lg-8 mx-auto">
                            <!-- Post preview-->
                            <div class="post-preview">
                                <ul>
                                    <li class="post-title">{{ product.name }}</li>
                                    <p class="post-subtitle">{{ product.description|raw }}</p>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
        </section>
    </header>
{% endblock %}
